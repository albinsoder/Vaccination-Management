<!- depending on what role the user has, i present different headers>


<% if(controll === "admin") { %>
    <%- include("styling/header", {title: title}); %>
<% } %>
<% if(controll === "user") { %>
  <%- include("styling/header3", {title: title}); %>
<% } %>
  

  <div class ="middlesecond">
    <% for (const row of res) { %>
  
      <form method= "POST" action="../../vaccine/password/<%= row.id %>">
        <fieldset class = "align-center" >
          <legend> Update Password </legend><br>
          <input type = "hidden" value = "<%= row.id %>" name = "id">
          <label>Username:   </label><br/>
          <%= row.username %><br><br>
          
          <label>Role:   </label><br/>
          <%= row.role %><br><br>

          <label>New Password:   </label><br/>
          <input type="text" name="passwords"><br><br>
          
          <input type="button" value ="Return" class = "create-button" onclick = "window.location = '../../vaccine/settings'">
          <input type ="submit" value = "Update" class = "create-button">
        </fieldset>
    </form>
    <% }; %>
  
  </div>
  
  <%- include("styling/footer"); %>